<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.snapcart">
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />


    <application
        android:allowBackup="true"
        android:label="SnapCart"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SnapCart">

        <!-- ✅ Main launcher screen -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 🔐 Registration screen -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- 🛒 Product list screen -->
        <activity
            android:name=".ProductListActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- 🛍 Cart screen -->
        <activity
            android:name=".CartActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- 💳 Checkout screen (optional, if implemented) -->
        <activity
            android:name=".CheckoutActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- 🧪 Temporary test screen (remove or keep as needed) -->
        <activity
            android:name=".LogoTestActivity"
            android:exported="true" />

        <activity
            android:name=".OrdersActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />


    </application>

</manifest>
