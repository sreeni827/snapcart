<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.snapcart">
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />


    <application
        android:allowBackup="true"
        android:label="SnapCart"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SnapCart">



        <!-- âœ… Main launcher screen -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ðŸ” Registration screen -->
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- ðŸ›’ Product list screen -->
        <activity
            android:name=".activities.ProductListActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- ðŸ› Cart screen -->
        <activity
            android:name=".activities.CartActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- ðŸ’³ Checkout screen (optional, if implemented) -->
        <activity
            android:name=".activities.CheckoutActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- ðŸ§ª Temporary test screen (remove or keep as needed) -->
        <activity
            android:name=".activities.LogoTestActivity"
            android:exported="true" />

        <activity
            android:name=".activities.OrdersActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity android:name=".activities.OrderDetailsActivity" />


    </application>

</manifest>
